<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
    <display-name>FrontController</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>ru.rsreu.tancev0814.listener.SessionListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/jsp/error/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>ru.rsreu.tancev0814.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encodingfilter</filter-name>
        <filter-class>ru.rsreu.tancev0814.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>send404securityfilter</filter-name>
        <filter-class>ru.rsreu.tancev0814.filters.Send404SecurityFilter</filter-class>
        <init-param>
            <param-name>errorcode</param-name>
            <param-value>404</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>send404securityfilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authenticationfilter</filter-name>
        <filter-class>ru.rsreu.tancev0814.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <description>Oracle</description>
    <resource-ref>
        <description>Oracle DB Connection Pool</description>
        <res-ref-name>jdbc/KanbanBoard</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
